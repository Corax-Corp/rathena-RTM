[Unit]
Description=Rathena Char Server
After=network-online.target remote-fs.target nss-lookup.target
Wants=network-online.target
Requires=map-rathena.service login-rathena.service

[Service]
EnvironmentFile=/etc/systemd/system/variables.txt
Type=single
PIDFile=/run/char-serv.pid
User=rathena
WorkingDirectory=${SERVERLOCATION}
ExecStart=${SERVERLOCATION}/char-server
# optional items below
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
